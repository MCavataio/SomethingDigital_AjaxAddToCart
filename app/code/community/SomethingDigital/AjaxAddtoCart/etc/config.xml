<?xml version="1.0"?>
<config>
  <modules>
    <SomethingDigital_AjaxAddtoCart>
      <version>1.1.0</version>
    </SomethingDigital_AjaxAddtoCart>
  </modules>
  <frontend>
    <layout>
      <updates>
        <ajaxaddtocart>
          <file>somethingdigital/ajaxaddtocart.xml</file>
        </ajaxaddtocart>
      </updates>
    </layout>
    <events>
      <controller_action_predispatch_checkout_cart_add>
        <observers>
          <sd_ajaxaddtocart>
            <class>SomethingDigital_AjaxAddtoCart_Model_Observer</class>
            <method>ajaxAction</method>
          </sd_ajaxaddtocart>
        </observers>
      </controller_action_predispatch_checkout_cart_add>
    </events>
  </frontend>
</config>